parameters:
    level: 8
    paths:
        - includes/
        - altolith-deploy-r2.php
    bootstrapFiles:
        - altolith-deploy-r2.php
        - phpstan-bootstrap.php
    excludePaths:
        - vendor/
    # Ignore WordPress core file require errors - PHPStan cannot verify
    # dynamic paths with ABSPATH constant at analysis time
    ignoreErrors:
        - '#Method.*has parameter \$request with generic class WP_REST_Request but does not specify its types#'
